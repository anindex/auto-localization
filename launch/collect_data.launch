<launch>
    <arg name="visualization"    default="true" />

    <node name="recorder" pkg="rosbag" type="record" args="-q amcl_pose scan rssi odom cmd_vel -O $(arg bag_path)/$(arg bag_name).bag" />
    <node name="save_data" pkg="krp_localization" type="record_data"/>

    <!-- Viewers -->
    <group if="$(arg visualization)">
        <node name="rviz" pkg="rviz" type="rviz"  args="-d $(find rss)/launch/wlrf.rviz"/>
    </group>
</launch>
